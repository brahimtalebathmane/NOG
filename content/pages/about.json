// src/pages/About.jsx
import React, { useEffect, useState } from "react";
import ReactMarkdown from "react-markdown";

export function About() {
  const [aboutData, setAboutData] = useState(null);

  useEffect(() => {
    fetch("/content/pages/about.json")
      .then(res => res.json())
      .then(data => setAboutData(data))
      .catch(err => console.error("Error loading About page:", err));
  }, []);

  if (!aboutData) return <p>Loading About page...</p>;

  return (
    <section className="p-6 max-w-4xl mx-auto space-y-6">
      <h1 className="text-2xl font-bold">{aboutData.titleAr}</h1>
      <ReactMarkdown className="prose">{aboutData.contentAr}</ReactMarkdown>

      <h1 className="text-2xl font-bold mt-8">{aboutData.titleFr}</h1>
      <ReactMarkdown className="prose">{aboutData.contentFr}</ReactMarkdown>
    </section>
  );
}
