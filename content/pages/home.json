// src/pages/Home.jsx
import React, { useEffect, useState } from "react";

export function Home({ onNavigate }) {
  const [homeData, setHomeData] = useState(null);

  useEffect(() => {
    fetch("/content/pages/home.json")
      .then(res => res.json())
      .then(data => setHomeData(data))
      .catch(err => console.error("Error loading Home page:", err));
  }, []);

  if (!homeData) return <p>Loading Home page...</p>;

  return (
    <section className="p-6 max-w-4xl mx-auto space-y-6 text-center">
      <h1 className="text-4xl font-bold">{homeData.heroTitleAr}</h1>
      <h2 className="text-2xl text-gray-600">{homeData.heroTitleFr}</h2>
      <p className="text-lg mt-2">{homeData.heroSloganAr}</p>
      <p className="text-lg text-gray-600">{homeData.heroSloganFr}</p>
      <p className="mt-4">{homeData.introTextAr}</p>
      <p className="mt-2 text-gray-700">{homeData.introTextFr}</p>
    </section>
  );
}
