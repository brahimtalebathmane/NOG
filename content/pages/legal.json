// src/pages/Legal.jsx
import React, { useEffect, useState } from "react";
import ReactMarkdown from "react-markdown";

export function Legal() {
  const [legalData, setLegalData] = useState(null);

  useEffect(() => {
    fetch("/content/pages/legal.json")
      .then(res => res.json())
      .then(data => setLegalData(data))
      .catch(err => console.error("Error loading Legal page:", err));
  }, []);

  if (!legalData) return <p>Loading Legal page...</p>;

  return (
    <section className="p-6 max-w-4xl mx-auto space-y-6">
      <h1 className="text-2xl font-bold">{legalData.titleAr}</h1>
      <ReactMarkdown className="prose">{legalData.contentAr}</ReactMarkdown>

      <h1 className="text-2xl font-bold mt-8">{legalData.titleFr}</h1>
      <ReactMarkdown className="prose">{legalData.contentFr}</ReactMarkdown>
    </section>
  );
}
